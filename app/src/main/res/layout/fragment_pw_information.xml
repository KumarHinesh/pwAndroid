<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="30dp"
    tools:context=".fragments.crf1Fragments.PwInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/writer"
            android:text="Woman Information "
            android:textSize="40sp"
            android:textStyle="bold" />

        <!--Q9 pragnant woman -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_pw_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s Name"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name1"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman Name (Orat Ka name Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <!--Q10 husband name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img2">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_husband_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Husband Name"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name2"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Husband Name  (shoar ka name likhe)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <!--Q11 Woman SiteDTO-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img3">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_site"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:text="RG"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name3"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman Site (Orat Ki Site Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <!--Q12 Woman Para-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img4">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_para"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s para"
                        android:inputType="text"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name4"
                    android:layout_marginLeft="5dp"
                    android:text="Woman Para (Orat Ka Para Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <!--Q13 Woman Block-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img5">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s Block"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name5"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman Block (Orat Ka Block Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <!--Q14 Woman Structure-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img6">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_structure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s Structure"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name6"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman Structure (Orat Ka Structure Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <!--Q15 Family/HouseHold-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img7">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_household"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s HouseHold"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name7"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman HouseHold (Orat Ka HouseHold Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <!--Q16 woman number-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/img8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img8">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_woman_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Woman`s Number"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name8"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman number (Orat Ka HouseHold Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_q17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crf2_q17_englisg"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crf2_q17_urdu"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />


            <RadioGroup
                android:id="@+id/rg_q17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/vs_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:text="Agree for screening"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/vs_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="2"
                    android:text="Not at home"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/vs_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="3"
                    android:text="Refused"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/vs_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="4"
                    android:text="Wrong Information"
                    android:textColor="@color/black" />


                <RadioButton
                    android:id="@+id/vs_option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="5"
                    android:text="Shifted out of DSS"
                    android:textColor="@color/black" />


                <RadioButton
                    android:id="@+id/vs_option6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="6"
                    android:text="PW died before Visit"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/vs_option7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="7"
                    android:text="Visitor"
                    android:textColor="@color/black" />


            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="8dp"
            android:background="@color/black" />

        <!--Q17 refused Reason-->
        <RelativeLayout
            android:id="@+id/rl_q17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/notebook" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img9">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp">


                    <EditText
                        android:id="@+id/et_q17_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Refused Reason"
                        android:inputType="number"
                        android:maxLength="1"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_name9"
                    android:layout_marginLeft="5dp"
                    android:text="Enter Woman Reused Reson (Orat K Mana karny ki Wajha Likhay)"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <Button
            android:id="@+id/btn_next_pw_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_shape_color"
            android:text="Next"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>